extends layoutstudent
block content 
	section.content-header
		.container-fluid
			.row.mb-2
				.col-sm-6
					h1 #{title}
	section.content
		.container-fluid
			.row
				.col-4
					.card.card-primary.card-outline
						.card-body.box-profile
							.text-center
								img.profile-user-img.img-fluid.img-circle(src='../../dist/img/image.jpg' alt='User profile picture')
							h3(style="margin-left:25px") #{fullname}
							p.text-muted.text-center Đang theo học
							ul.list-group.list-group-unbordered.mb-3
								li.list-group-item
									b Hệ đào tạo
									a.float-right #{student.training_system}
								li.list-group-item
									b Email 
									a.float-right #{student.school_email}
								li.list-group-item
									b Mã số khoa
									a.float-right #{student.departmentID}
								li.list-group-item
									b Điện thoại
									a.float-right #{student.phone}
								li.list-group-item
									b Năm vào trường
									a.float-right #{student.Khoa}
							a.btn.btn-primary.btn-block(href='#')
								b Chỉnh sửa thông tin
				.col-8 
					.card
						.card-header.p-2
							ul.nav.nav-pills
								li.nav-item
									a.nav-link.active(href='#activity' data-toggle='tab') Hoạt động
								li.nav-item
									a.nav-link(href='#timeline' data-toggle='tab') Timeline
								li.nav-item
									a.nav-link(href='#settings' data-toggle='tab') Email
						// /.card-header
						.card-body
							.tab-content
								.card.card-primary
									.card-header
										h3.card-title Đăng kí hoạt động
									// /.card-header
									// form start
									form
										.card-body
											.form-group
												label(for='exampleInputEmail1') Email
												input#exampleInputEmail1.form-control(type='email' placeholder='Nhập Email')
											.form-group
												label(for='exampleInputPassword1') MSSV
												input#exampleInputPassword1.form-control(type='text' placeholder='MSSV')
											.form-group
												label(for='exampleInputFile') Upload file
												.input-group
													.custom-file
														input#exampleInputFile.custom-file-input(type='file')
														label.custom-file-label(for='exampleInputFile') 
													.input-group-append
														span.input-group-text Upload
											.form-check
												input#exampleCheck1.form-check-input(type='checkbox')
												label.form-check-label(for='exampleCheck1') Ghi nhớ thông tin
										// /.card-body
										.card-footer
											button.btn.btn-primary(type='submit') Gửi form

									

